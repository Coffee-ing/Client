<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing20"
    android:layout_marginVertical="@dimen/spacing14"
    android:background="@drawable/rect_point_3_radius_15"
    android:elevation="@dimen/spacing4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/point_3">

        <TextView
            android:id="@+id/tv_detail_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="상세 커핑 조회하기"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/point_1"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_detail_back_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_detail_back_arrow"
            android:backgroundTint="@color/point_3"
            app:layout_constraintTop_toTopOf="@+id/tv_detail_main_title"
            app:layout_constraintBottom_toBottomOf="@+id/tv_detail_main_title"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cv_detail_image"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coffeeing_dummy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_main_title"
            app:shapeAppearanceOverlay="@style/Radius10"
            tools:src="@drawable/coffeeing_dummy" />

        <TextView
            android:id="@+id/tv_detail_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/point_1"
            android:textSize="14dp"
            android:text="@string/like_number"
            app:layout_constraintBottom_toBottomOf="@+id/tb_detail_like_button"
            app:layout_constraintEnd_toStartOf="@+id/tb_detail_like_button"
            app:layout_constraintTop_toTopOf="@+id/tb_detail_like_button"
            tools:text="@string/like_number" />

        <ToggleButton
            android:id="@+id/tb_detail_like_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginVertical="15dp"
            android:layout_marginEnd="@dimen/spacing20"
            android:background="@drawable/ic_detail_like_button_selector"
            android:textOff=""
            android:textOn=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_detail_image"
            tools:src="@drawable/ic_detail_like_button_selector" />


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_detail_category_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="16dp"
            app:chipSpacing="8dp"
            app:chipSpacingVertical="4dp"
            app:layout_constraintTop_toBottomOf="@id/tb_detail_like_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_item_detail_barista_original"
                style="@style/Style.Material3.Chip.Coffeeing.Type.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coffeeing_type_barista_original" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_item_detail_local_area"
                style="@style/Style.Material3.Chip.Coffeeing.Type.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coffeeing_type_local_area" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_item_detail_hot_place"
                style="@style/Style.Material3.Chip.Coffeeing.Type.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coffeeing_type_hot_place" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_item_detail_professional"
                style="@style/Style.Material3.Chip.Coffeeing.Type.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coffeeing_type_professional" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_item_detail_beginner"
                style="@style/Style.Material3.Chip.Coffeeing.Type.Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coffeeing_type_beginner" />

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/point_1"
            android:textSize="16dp"
            android:text="@string/detail1_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cg_detail_category_button"
            tools:text="용산카페 전문바리스타 커피 클래스" />


        <ImageView
            android:id="@+id/iv_detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_home_location"
            app:layout_constraintStart_toStartOf="@+id/tv_detail_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_title" />

        <TextView
            android:id="@+id/tv_detail_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/notosanskr_medium"
            android:textColor="@color/point_1"
            android:textSize="9dp"
            android:text="@string/detail1_place"
            app:layout_constraintBottom_toBottomOf="@+id/iv_detail_location"
            app:layout_constraintStart_toEndOf="@+id/iv_detail_location"
            app:layout_constraintTop_toTopOf="@+id/iv_detail_location"
            tools:text="서울특별시 용산구" />

        <ImageView
            android:id="@+id/iv_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_home_time"
            app:layout_constraintBottom_toBottomOf="@+id/tv_detail_location_text"
            app:layout_constraintStart_toEndOf="@+id/tv_detail_location_text"
            app:layout_constraintTop_toTopOf="@+id/tv_detail_location_text" />

        <TextView
            android:id="@+id/iv_detail_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/notosanskr_medium"
            android:textColor="@color/point_1"
            android:textSize="9dp"
            android:text="@string/detail1_time"
            app:layout_constraintBottom_toBottomOf="@id/iv_detail_time"
            app:layout_constraintStart_toEndOf="@+id/iv_detail_time"
            app:layout_constraintTop_toTopOf="@+id/iv_detail_time"
            tools:text="매주 토요일 13시" />

        <ImageView
            android:id="@+id/iv_detail_recruit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_home_person"
            app:layout_constraintBottom_toBottomOf="@id/iv_detail_time_text"
            app:layout_constraintStart_toEndOf="@+id/iv_detail_time_text"
            app:layout_constraintTop_toTopOf="@+id/iv_detail_time_text" />

        <TextView
            android:id="@+id/iv_detail_recruit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/point_1"
            android:textSize="9dp"
            android:text="@string/detail1_recruit"
            app:layout_constraintBottom_toBottomOf="@+id/iv_detail_recruit"
            app:layout_constraintStart_toEndOf="@+id/iv_detail_recruit"
            app:layout_constraintTop_toTopOf="@id/iv_detail_recruit"
            tools:text="10" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_detail_host_box"
            android:background="@drawable/rect_point_1_radius_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="17dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_detail_recruit"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cl_detail_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="용산커피대장"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/point_3"
                app:layout_constraintStart_toStartOf="@+id/cl_detail_host_box"
                app:layout_constraintTop_toTopOf="@+id/cl_detail_host_box"
                app:layout_constraintBottom_toBottomOf="@+id/cl_detail_host_box"/>

            <TextView
                android:id="@+id/cl_detail_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="호스트"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textColor="@color/point_3"
                app:layout_constraintStart_toEndOf="@+id/cl_detail_nickname"
                app:layout_constraintTop_toTopOf="@+id/cl_detail_host_box"
                app:layout_constraintBottom_toBottomOf="@+id/cl_detail_host_box"/>

            <TextView
                android:id="@+id/cl_detail_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="커핑 모집 횟수"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textColor="@color/point_3"
                app:layout_constraintEnd_toStartOf="@+id/tv_detail_count"
                app:layout_constraintTop_toTopOf="@+id/cl_detail_host_box"
                app:layout_constraintBottom_toBottomOf="@+id/cl_detail_host_box"/>

            <TextView
                android:id="@+id/tv_detail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="10회"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textColor="@color/point_3"
                app:layout_constraintEnd_toEndOf="@+id/cl_detail_host_box"
                app:layout_constraintTop_toTopOf="@+id/cl_detail_host_box"
                app:layout_constraintBottom_toBottomOf="@+id/cl_detail_host_box"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_detail_intro_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="17dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_detail_host_box"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_detail_intro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/detail1_intro_title"
                android:fontFamily="@font/notosanskr_bold"
                android:textSize="15sp"
                android:textColor="@color/point_1"
                app:layout_constraintTop_toTopOf="@+id/cl_detail_intro_box"/>

            <TextView
                android:id="@+id/tv_detail_intro_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/detail1_intro_content"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="15sp"
                android:textColor="@color/point_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_intro_title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_detail_countdown_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="17dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_detail_intro_box"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_detail_countdown_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/detail1_countdown_title"
                android:fontFamily="@font/notosanskr_bold"
                android:textSize="15sp"
                android:textColor="@color/point_1"
                app:layout_constraintTop_toTopOf="@+id/cl_detail_countdown_box"/>

            <TextView
                android:id="@+id/tv_detail_countdown_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/detail1_countdown_content"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="15sp"
                android:textColor="@color/point_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_countdown_title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <android.widget.Button
            android:id="@+id/b_detail_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            android:text="@string/detail_submit"
            android:textColor="@color/point_3"
            android:textSize="14dp"
            android:background="@drawable/rect_point_1_radius_15"
            android:elevation="@dimen/spacing4"
            android:fontFamily="@font/notosanskr_bold"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/cl_detail_countdown_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>